@model Categoria

<h2 class="mb-4 text-center">Planejamento Financeiro</h2>
<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="AdicionarCategoria" asp-controller="Home" method="post" class="row gy-2 needs-validation justify-content-center">
    <input type="hidden" asp-for="CategoriaId" />
    <!-- Descrição -->
    <div class="col-12 col-lg-8">
        <label for="categoria" class="form-label mb-1">Categoria</label>
        <input type="text" class="form-control form-control-sm" id="categoria" placeholder="Digite a descrição" asp-for="Nome">
    </div>

    <!-- Botões -->
    <div class="col-12 col-lg-8 d-flex justify-content-between mt-2">
        <button type="submit" class="btn btn-success btn-sm px-4">Adicionar</button>
        <a asp-action="Index" class="btn btn-danger btn-sm px-4">Cancelar</a>
    </div>
</form>
