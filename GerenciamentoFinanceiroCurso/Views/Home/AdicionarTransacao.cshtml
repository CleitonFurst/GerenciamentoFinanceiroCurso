@model Financeiro

<h2 class="mb-4 text-center">Planejamento Financeiro</h2>
<div asp-validation-summary="All" class="text-danger"></div>
<form asp-action="AdicionarTransacao" asp-controller="Home" method="post" class="row gy-2 needs-validation justify-content-center">
    <!-- Descrição -->
    <div class="col-12 col-lg-8">
        <label for="descricao" class="form-label mb-1">Descrição</label>
        <input type="text" class="form-control form-control-sm" id="descricao" placeholder="Digite a descrição" asp-for="Descricao">       
    </div>

    <!-- Valor -->
    <div class="col-12 col-lg-8">
        <label for="valor" class="form-label mb-1">Valor (R$)</label>
        <div class="input-group input-group-sm">
            <span class="input-group-text">R$</span>
            <input type="number" class="form-control" id="valor" placeholder="0,00" min="0" step="0.01" asp-for="Valor" >
        </div>       
    </div>

    <!-- Categoria -->
    <div class="col-12 col-lg-8">
        <label for="categoria" class="form-label mb-1">Categoria</label>
        <select id="categoria" class="form-select form-select-sm"
                asp-items="@(new SelectList(ViewBag.Categorias, "CategoriaId", "Nome"))" asp-for="CategoriaId">
            <option value="">Selecione uma categoria</option>
        </select>        
    </div>

    <!-- Data da Operação -->
    <div class="col-12 col-lg-8">
        <label for="dataOperacao" class="form-label mb-1">Data da Operação</label>
        <input type="date" class="form-control form-control-sm" id="dataOperacao" asp-for="DataDaOperacao">        
    </div>

    <!-- Transação -->
    <div class="col-12 col-lg-8">
        <label for="transacao" class="form-label mb-1">Transação</label>
        <select id="transacao" class="form-select form-select-sm"
                asp-items="@(new SelectList(ViewBag.Transacoes, "TransacaoId", "Nome"))" asp-for="TransacaoId">
            <option value="">Selecione uma transação</option>
        </select>       
    </div>

    <!-- Botões -->
    <div class="col-12 col-lg-8 d-flex justify-content-between mt-2">
        <button type="submit" class="btn btn-success btn-sm px-4">Adicionar</button>
        <a asp-action="Index" class="btn btn-danger btn-sm px-4">Cancelar</a>
    </div>
</form>
